<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="@dimen/default_cardview_elevation"
    app:cardCornerRadius="@dimen/default_cardview_corner_radius"
    android:layout_margin="6dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

    <TextView
        android:id="@+id/tweet_date_text"
        tools:text="Oct 22, 2018"
        android:gravity="top"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/blackBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
   />

    <TextView
        android:id="@+id/tweet_body_text"
        tools:text="This is a tweet.  TEST TWEET TEXT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:textColor="@color/blackBackground"/>


    <ImageView
        android:id="@+id/tweet_photo_iv"
        android:contentDescription="@string/picture_from_tweet_cd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tweet_photo_size"
        android:scaleType="fitCenter"
        android:layout_margin="10dp"

        />


</LinearLayout>



</android.support.v7.widget.CardView>


