<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="@dimen/mars_explore_cardview_height"
    style="@style/CardView.Light"
    android:elevation="@dimen/default_cardview_elevation"
    app:cardCornerRadius="@dimen/default_cardview_corner_radius"
    android:layout_marginStart="@dimen/mars_explore_cardview_start_end_margin"
    android:layout_marginEnd="@dimen/mars_explore_cardview_start_end_margin"
    android:layout_marginTop="@dimen/mars_explore_cardview_top_bottom_margin"
    android:layout_marginBottom="@dimen/mars_explore_cardview_top_bottom_margin"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">



    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/mars_explore_cardview_text"
            style="@style/MarsExploreCardViewText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Weather On Mars"
            android:elevation="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:contentDescription="@string/mars_category_cd"
            android:id="@+id/mars_explore_cardview_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:background="@color/blackBackground"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />


        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/scrim"
            />
    </android.support.constraint.ConstraintLayout>



</android.support.v7.widget.CardView>