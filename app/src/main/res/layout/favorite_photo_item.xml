<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="@dimen/favorite_photo_card_width"
    android:layout_height="@dimen/favorite_photo_card_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="@dimen/default_cardview_elevation"
    app:cardCornerRadius="@dimen/default_cardview_corner_radius"
    android:id="@+id/favorite_photo_cardview"
    android:layout_margin="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/favorite_photo_imageview"
        android:scaleType="centerCrop"
        android:contentDescription="@string/your_saved_photo_cd"/>



</android.support.v7.widget.CardView>